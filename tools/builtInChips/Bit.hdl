/**
 * 1-bit register.
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out[t+1] = out[t] (no change)
 */

CHIP Bit {

    IN  in, load;
    OUT out;

    BUILTIN Bit;
    CLOCKED in, load;
}
